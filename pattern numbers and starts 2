public static void main(String[] args) {
		Scanner scn=new Scanner(System.in);
		int n=scn.nextInt();
		
		int row=1;
		int val=1;
		int nst=n-1;
		while(row<=n)
		{
			for(int i=1;i<=val;i++)
			{
				System.out.print(i+" ");
			}
			for(int i=1;i<=nst;i++)
			{
				System.out.print("* ");
			}
			row++;
			nst=nst-1;
			val=val+1;
			System.out.println();
			
		}

	}
