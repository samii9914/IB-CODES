public static void main(String[] args) {
		Scanner scn=new Scanner(System.in);
		int n=scn.nextInt();
		
		int nst=-1;
		int row=1;
		int val=n;
		while(row<=n)
		{
			for(int i=1;i<=val;i++)
			{
				System.out.print(i+" ");
			}
			for(int i=1;i<=nst;i++)
			{
				System.out.print("* ");
			}
			System.out.println();
			row++;
			val--;
			nst=nst+2;
		}
		

	}
